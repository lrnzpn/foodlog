<section class="hero is-link is-small">
    <!-- Hero head: will stick at the top -->
    <div class="hero-head">
      <nav class="navbar">
        <div class="container">
          <div class="navbar-brand">
            <%= link_to root_path, class: "navbar-item" do %>
                <i class="fas fa-utensils"></i>
                <span class="has-text-weight-bold is-size-4 ml-4">Foodlog</span>
            <% end %>
            <span class="navbar-burger" data-target="navbarMenuHeroA">
              <span></span>
              <span></span>
              <span></span>
            </span>
          </div>
          <div id="navbarMenuHeroA" class="navbar-menu">
            <div class="navbar-end">
                
                <% if user_signed_in? %>
                    <span class="navbar-item">
                    <!-- pass the text, path, then args -->
                        <%= link_to "Create new entry", new_entry_path, class: 'button is-success' %>
                    </span>  
                    <span class="navbar-item">
                        <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'button is-danger' %>
                    </span>
                <% else %>
                    <span class="navbar-item">
                        <%= link_to "Register", new_user_registration_path, class: 'button is-primary' %>
                    </span>
                    <span class="navbar-item">
                        <%= link_to "Sign in", new_user_session_path, class: 'button is-light' %>
                    </span>
                <% end %>
            </div>
          </div>
        </div>
      </nav>
    </div>
  
    <!-- Hero content: will be in the middle -->
    <div class="hero-body">
      <div class="container has-text-centered">
        <p class="title">
            <!-- render based on data -->
          <% if content_for(:title) %>
            <%= yield :title %>
          <% else %>
            Foodlog
          <% end%>
        </p>
      </div>
    </div>

  </section>